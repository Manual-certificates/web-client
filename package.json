{
  "name": "vue-vite-template",
  "version": "1.0.0-rc.0",
  "gitHooks": {
    "pre-commit": "yarn lint",
    "pre-push": "yarn test && yarn rsc"
  },
  "scripts": {
    "vite-dev-server": "vite",
    "vite-build": "vite build",
    "start": "cross-env VITE_APP_ENVIRONMENT=development yarn vite-dev-server",
    "build": "cross-env VITE_APP_ENVIRONMENT=production yarn vite-build",
    "analyze": "cross-env VITE_APP_ENVIRONMENT=analyze yarn vite-build",
    "test": "yarn test:unit",
    "test:unit": "vitest run",
    "lint": "yarn lint:styles && yarn lint:scripts",
    "lint:styles": "stylelint \"src/**/*.{vue,scss,css}\" --max-warnings=0",
    "lint:scripts": "eslint \"{src,config}/**/*.{vue,js,ts}\" --cache --fix --max-warnings=0",
    "preview": "vite preview",
    "rsc": "node scripts/release-sanity-check.mjs"
  },
  "dependencies": {
    "@vuelidate/core": "^2.0.0-alpha.34",
    "@vuelidate/validators": "^2.0.0-alpha.26",
    "@vueuse/core": "^8.6.0",
    "axios": "^0.27.2",
    "bignumber.js": "^9.0.2",
    "dayjs": "^1.11.3",
    "jsona": "^1.9.6",
    "lodash-es": "^4.17.21",
    "loglevel": "^1.8.0",
    "mitt": "^3.0.0",
    "pinia": "^2.0.11",
    "vue": "^3.2.37",
    "vue-i18n": "^9.2.0-beta.26",
    "vue-router": "4",
    "vue-toastification": "^2.0.0-rc.5"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.4.0",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.41",
    "@types/vuelidate": "^0.7.15",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.18",
    "chalk": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.1.0",
    "eslint-plugin-vue-i18n": "^0.3.0",
    "happy-dom": "^5.3.1",
    "prettier": "^2.5.1",
    "rollup-plugin-visualizer": "^5.5.4",
    "sass": "^1.52.2",
    "stylelint": "^14.9.0",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-declaration-strict-value": "^1.8.0",
    "stylelint-scss": "^4.1.0",
    "typescript": "^4.7.3",
    "vite": "^2.9.10",
    "vite-plugin-checker": "^0.4.6",
    "vite-plugin-svg-icons": "^2.0.1",
    "vitest": "^0.15.1",
    "yorkie": "^2.0.0"
  }
}
